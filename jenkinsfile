// Declarative Jenkins pipeline for Java Maven app: 
// - Checkout from Git
// - Maven build/test
// - Multi-stage Docker build (openjdk:17-jre-slim base)
// - Run container locally on port 8081
// Use Docker Pipeline plugin with proper Docker socket mounting


pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE_NAME = 'my-calc-app-prod'
    }
    
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'maven:3.9.5-eclipse-temurin-17'
                    args '-v $HOME/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn -B clean package'
            }
        }
        
        stage('Docker Build') {
            steps {
                script {
                    def app = docker.build("${DOCKER_IMAGE_NAME}:${env.BUILD_ID}")
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    def containerName = "calc-app-running"
                    // Stop and remove existing container to free up port and name
                    sh "docker stop ${containerName} || true"
                    sh "docker rm ${containerName} || true"
                    
                    // Run new container
                    sh "docker run -d -p 8082:8080 --name ${containerName} ${DOCKER_IMAGE_NAME}:${env.BUILD_ID}"
                }
            }
        }
    }
    
    post {
        always {
            deleteDir() // Use deleteDir() as a built-in alternative to cleanWs()
        }
        success {
            echo "Build successful! Application running on port 8082"
        }
        failure {
            echo "Build failed!"
        }
    }
}

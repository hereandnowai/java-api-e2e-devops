// Declarative Jenkins pipeline for Java Maven app: 
// - Checkout from Git
// - Maven build/test
// - Multi-stage Docker build (openjdk:17-jre-slim base)
// - Run container locally on port 8081
// Use Docker Pipeline plugin

pipeline {
    agent any
    stages {
        stage('Checkout') { steps { git url: 'https://github.com/hereandnowai/java-api-e2e-devops' } }
        stage('Build') { steps { sh 'mvn clean package' } }
        stage('Docker Build') {
            steps {
                script {
                    docker.build("my-calc-app-prod:${env.BUILD_ID}")
                    sh "docker run -d -p 8082:8080 my-calc-app-prod:${env.BUILD_ID}"
                }
            }
        }
    }
}

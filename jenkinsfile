// Declarative Jenkins pipeline for Java Maven app: 
// - Checkout from Git
// - Maven build/test
// - Multi-stage Docker build (openjdk:17-jre-slim base)
// - Run container locally on port 8081
// Use Docker Pipeline plugin
pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/hereandnowai/java-api-e2e-devops'
            }
        }   
        stage('Build & Test') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    docker.build('java-api-e2e-devops:latest', '-f Dockerfile .')
                }
            }
        }
        stage('Run Container') {
            steps {
                script {
                    // Stop and remove existing container if it exists
                    sh 'docker rm -f java-api-e2e-devops || true'
                    // Run new container
                    docker.run('java-api-e2e-devops:latest', '-p 8081:8080 --name java-api-e2e-devops')
                }
            }
        }
    }
}
